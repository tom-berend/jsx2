{
    "name": "jsx2",
    "version": "0.0.1",
    "description": "Convert JSXGraph to TS, then maybe add ThreeJS, then add XR support...",
    "license": "MIT",
    "main": "./build/jxg.js",
    "type": "module",
    "scripts": {
        "comment1": "it is convenient to use 'npm run build' with debug breakpoints in VSCode",
        "build": "rimraf ./build && tsc -w",
        "comment2": "to run a single test (eg: coords):  npx jest coords",
        "test": "jest",
        "lint": "eslint src/*",
        "comment3": "use 'npx eslint src/*/point.* to lint a single file",
        "docs": "typedoc --entryPointStrategy expand ./src",
        "comment4": "documentation starts at http://localhost/jsx2/doc/index.html",
        "dist": "vite build --base=/jsx3d/dist/",
        "comment5": "use 'npx vite' to preview building distribution"
    },
    "keywords": [],
    "author": "",
    "devDependencies": {
        "@babel/preset-typescript": "^7.28.5",
        "@eslint/js": "^9.39.2",
        "@jest/globals": "^30.2.0",
        "@jitbit/htmlsanitizer": "^2.0.3",
        "@types/jest": "^30.0.0",
        "@types/three": "^0.182.0",
        "babel-cli": "^6.26.0",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.4.5",
        "typedoc": "^0.28.14",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.1",
        "vite": "^6.4.1"
    },
    "dependencies": {
        "three": "^0.182.0",
        "three-text2d": "^0.6.0"
    }
}
